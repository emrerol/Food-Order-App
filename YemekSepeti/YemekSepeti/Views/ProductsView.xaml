                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.2}">
                </Label>

                <ImageButton Source="IcnSepeteEkle.png" Scale="0.5"
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=5.7}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.01}">
                </ImageButton>

                <Image Source="cigkoftedurum2.png" Scale="0.4"
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=3.2}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.4}">
                </Image>


                <AbsoluteLayout BackgroundColor="White" HeightRequest="90" WidthRequest="420" TranslationY="430">

                </AbsoluteLayout>
                <Image Source="ImgOsmanliSofrasi.png" HeightRequest="100" WidthRequest="100" 
                 RelativeLayout.YConstraint=
                 "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height, Factor=6.4}"
                 RelativeLayout.XConstraint=
                  "{ConstraintExpression Type=RelativeToView,ElementName=BoxView1, Property=Width, Factor=0.05}">
                </Image>
                <Label Text="Karaoğulları Osmanlı Kebap, Keçiören" TextColor="#333" FontAttributes="Bold" FontSize="14" 
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=6.6}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.35}">
                </Label>

                <Label Text="Lahmacun" TextColor="#333" FontAttributes="Bold" FontSize="14"
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=8.2}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.05}">
                </Label>

                <Label Text="Mevsim salata, acılı ezme ile" TextColor="#333" FontSize="12"
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=8.6}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.05}">
                </Label>

                <Label Text="13 TL" TextColor="#ff6508" FontSize="16"
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=9.1}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.2}">
                </Label>

                <ImageButton Source="IcnSepeteEkle.png" Scale="0.5"
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=8.9}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.01}">
                </ImageButton>

                <Image Source="Kebap1.png" Scale="0.35"
                   RelativeLayout.YConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Height,Factor=7}"
                   RelativeLayout.XConstraint=
                   "{ConstraintExpression Type=RelativeToView, ElementName=BoxView1, Property=Width, Factor=0.29}">
                </Image>


            </RelativeLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
